    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ai00_server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ai00_server",
                    "--package=ai00_server"
                ],
                "filter": {
                    "name": "ai00_server",
                    "kind": "bin"
                }
            },
            "args": [
                "--model",
                "./Config.toml",
                "--adapter",
                "auto"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ai00_server'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ai00_server",
                    "--package=ai00_server"
                ],
                "filter": {
                    "name": "ai00_server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}